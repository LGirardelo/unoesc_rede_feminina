<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:cpf) %></th>
    <th><%= model_class.human_attribute_name(:home_phone) %></th>
    <th><%= model_class.human_attribute_name(:cell_phone) %></th>
    <th><%= model_class.human_attribute_name(:birth_date) %></th>
    <th><%= model_class.human_attribute_name(:sex) %></th>

  </tr>
  </thead>
  <tbody>
  <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.cpf %></td>
        <td><%= person.home_phone %></td>
        <td><%= person.cell_phone %></td>
        <td><%= person.birth_date %></td>
        <td><%= person.sex %></td>

        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      person_path(person), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_person_path(person), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      person_path(person),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_person_path,
            :class => 'btn btn-primary' %>
